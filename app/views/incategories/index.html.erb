<p id="notice"><%= notice %></p>

<h1>Income categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incategories.each do |incategory| %>
      <tr>
        <td><%= incategory.name %></td>
        <td><%= link_to 'Show', incategory ,class: "btn btn-xs  btn-info"%></td>
        <td><%= link_to 'Edit', edit_incategory_path(incategory),class: "btn btn-xs btn-primary"  %></td>
        <td><%= link_to 'Destroy', incategory, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Incategory', new_incategory_path,class: "btn btn-xs btn-primary"  %>
<%= link_to "Back", root_path , class: "btn btn-xs btn-success" %>