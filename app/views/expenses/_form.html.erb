<% if @expense.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@expense.errors.count, "error") %>
            prohibited this expense from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @expense.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
 <div class="row">
  <div class="col-xs-12">
    <%= form_for(@expense, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :desc %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :desc, rows: 10, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :price%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :price, class: "form-control", placeholder: "Price", autofocus: true %>
        </div>
      </div>
      <div class="CatMarg">
      <div >
        <% exarray = Excategory.all.map { |excategory| [excategory.name, excategory.id] }  %>
        <%= select_tag(:excategory_id, options_for_select(exarray)) %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large' %>
        </div>

      </div><% end %>
  </div>
</div>
