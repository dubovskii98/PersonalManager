<p id="notice"><%= notice %></p>

<h1>Excategories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @excategories.each do |excategory| %>
      <tr>
        <td><%= excategory.name %></td>
        <td><%= link_to 'Show', excategory ,class: "btn btn-xs  btn-info"%></td>
        <td><%= link_to 'Edit', edit_excategory_path(excategory) ,class: "btn btn-xs btn-primary"%></td>
        <td><%= link_to 'Destroy', excategory, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-xs btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Excategory', new_excategory_path ,class: "btn btn-xs btn-primary"%>
<%= link_to "Back", root_path , class: "btn btn-xs btn-success"%>
